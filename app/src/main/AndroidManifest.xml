<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smartsavr"
        tools:targetApi="31">
        <activity
            android:name="com.northeasternproject.smartsavr.ChildHomeChoresUpcomingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.ChildHomeChoresCompletedActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.ChildLoginActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:parentActivityName="com.northeasternproject.smartsavr.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.ParentChildDetailActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.ParentHomeActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.ChildHomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.northeasternproject.smartsavr.ParentChildChoresActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.ChildSummaryActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:exported="true" />
        <activity
            android:name="com.northeasternproject.smartsavr.ParentSummaryActivity"
            android:exported="true" />
        <activity
            android:name="com.northeasternproject.smartsavr.ParentLoginActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:parentActivityName="com.northeasternproject.smartsavr.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.SignUpActivity"
            android:exported="false"
            android:parentActivityName="com.northeasternproject.smartsavr.ParentLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.northeasternproject.smartsavr.AddChildActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <service android:name="com.northeasternproject.smartsavr.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>
