<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Parent_HomeScreenZero">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_added_children"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven't added any children yet."
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/add_a_child_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:text="@string/Add_a_Child"
        android:textColor="@color/blue"
        android:clickable="true"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/allowance_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Allowance Summary" />


</LinearLayout>